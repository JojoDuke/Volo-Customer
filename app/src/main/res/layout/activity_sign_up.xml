<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <RelativeLayout
        android:background="@color/secondary"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:contentDescription="@string/back_icon"
            android:onClick="calLSettings"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textColor="@color/primary"
            android:textSize="18sp" />

    </RelativeLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progress="80"
                android:layout_marginBottom="30dp"
                android:progressTint="@color/primary" />

            <TextView
                android:fontFamily="@font/roboto_bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="@string/please_enter_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_marginTop="20dp"
                android:id="@+id/first_name"
                app:startIconDrawable="@drawable/ic_write"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="First Name"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/last_name"
                app:startIconDrawable="@drawable/ic_write"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="Last Name"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:inputType="text"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/email"
                app:startIconDrawable="@drawable/ic_email"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="Email"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/password"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="8dp"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="@color/black"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="@string/password"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:inputType="textPassword"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:paddingTop="5dp"
                android:text="@string/password_must_be_between_8_12_characters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirm_password"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="10dp"
                app:boxCornerRadiusTopStart="8dp"
                app:passwordToggleTint="@color/black"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                android:hint="@string/confirm_password"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxStrokeWidthFocused="0dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/black"
                    android:inputType="textEmailAddress"
                    android:layout_height="match_parent"/>

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_of_birth_optional"/>

            <DatePicker
                android:id="@+id/birthday_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:calendarTextColor="@color/black"
                android:calendarViewShown="false"
                android:datePickerMode="spinner"
                android:hapticFeedbackEnabled="true"
                android:spinnersShown="true" />

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:fontFamily="@font/roboto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_country_code_amp_enter_phone_number"/>

            <com.hbb20.CountryCodePicker
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:id="@+id/country_picker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp"
                app:ccpDialog_keyboardAutoPopup="false"
                android:background="@color/primary"
                app:ccp_autoDetectCountry="true"
                app:ccp_showFlag="true"
                app:ccp_showFullName="true"
                android:layout_marginBottom="15dp"
                app:ccp_showNameCode="true" />

            <com.google.android.material.textfield.TextInputLayout
                app:boxStrokeColor="@color/primary"
                android:id="@+id/phone_number"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/black"
                app:hintTextColor="@color/black"
                app:boxStrokeWidth="0dp"
                app:placeholderTextColor="@color/black"
                android:textColorHint="@color/black"
                app:boxBackgroundColor="@color/primary"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeWidthFocused="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:inputType="number"
                    android:layout_height="65dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <CheckBox
                android:fontFamily="@font/roboto_medium"
                android:layout_marginTop="15dp"
                android:text="@string/i_agree_with_volo_s_terms_and_conditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_marginTop="20dp"
                android:text="@string/confirm"
                android:layout_width="match_parent"
                android:layout_height="65dp"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>